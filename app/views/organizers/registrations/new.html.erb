<% provide(:title, "イベント主催者新規登録") %>
<div class="container">
  <div class="row pt-3 pb-5">
  <div class="col-md-8 offset-md-2">
    <div class="card bg-white border-none">
      <div class="card-header font-weight-bold">
        主催者様新規登録
      </div>
      <div class="card-body p-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="col-md-12">
              <table class="table table-bordered">
                <tr>
                  <th><%= f.label :username, "ユーザネーム", class: "form-label" %></th>
                  <td>
                    <div class="form-group">
                      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :email, "メールアドレス", class: "form-label" %></th>
                  <td>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :password, "パスワード", class: "form-label" %></br>
                    <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> 文字以上</em>
                    <% end %><br/>
                  </th>
                  <td>
                    <div class="form-group">
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                  　</div>
                　</td>
                </tr>
                <tr>
                  <th><%= f.label :password_confirmation, "確認用パスワード" %></th>
                  <td>
                    <div class="form-group password optional user_password_confirmation">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                  </td>
                </tr>
              </table>
              <div class="text-center">
                <%= f.submit "登録する", class: "btn btn-primary"  %>
              </div>
            </div>
          <% end %>
          </div>
     </div>
    </div>
  </div>
</div>
</div>
