<% provide(:title, "プロフィール編集") %>
<% provide(:title, "イベント主催者新規登録") %>
<div class="container">
  <div class="row pt-3 pb-5">
    <div class="col-md-8 offset-md-2">
      <div class="card bg-white border-none">
        <div class="card-header font-weight-bold">
          主催者様新規登録
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="col-md-12">
              <table class="table table-bordered">
                <tr>
                  <th><%= f.label :image, "プロフィール画像" %></th>
                  <td>
                    <div class="form-group">
                      <%= f.file_field :image, class: "form-control-file" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :username, "ユーザネーム", class: "form-label" %></th>
                  <td>
                    <div class="form-group string optional user_name">
                      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :website, "ウェブサイト", class: "form-label" %></th>
                  <td>
                    <div class="form-group string optional user_name">
                      <%= f.text_field :website, autofocus: true, autocomplete: "username", class: "form-control" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :email, "メールアドレス", class: "form-label" %></th>
                  <td>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :description, "自己紹介" %></th>
                  <td>
                    <div class="form-group">
                      <%= f.text_area :description, autofocus: true, class: "form-control" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td>
                    <div class="form-group">
                      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "---"}, {class: ""} %>
                  　</div>
                　</td>
                </tr>
                <tr>
                  <th>アカウント削除</th>
                  <td>
                    <div class="form-group">
                      <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete, class: "btn btn-danger" %>
                  　</div>
                　</td>
                </tr>
              </table>
              <div class="text-center">
                <%= f.submit "変更する", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-right">
        <%= link_to "戻る", :back %>
      </div>
    </div>
  </div>
</div>
