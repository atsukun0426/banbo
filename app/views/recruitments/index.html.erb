<% provide(:title, "募集一覧") %>
<%= search_form_for @q do |f| %>
 <%= f.label :title, "キーワード" %>
 <%= f.search_field :title_cont %>
 <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name %>
 <%= f.collection_select :music_genre_id_eq, MusicGenre.all, :id, :name %>
 <%= f.submit "検索" %>
<% end %>
<% @recruitments.each do |recruitment| %>
  <div class="list-group">
    <%= link_to recruitment.title, recruitment, class: "list-group-item list-group-item-action" %>
    <p class="list-group-item"><%= recruitment.prefecture.name %></p>
    <p class="list-group-item"><%= recruitment.music_genre.name %></p>
  </div>
<% end %>
