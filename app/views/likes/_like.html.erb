<% if user_signed_in? %>
    <% if !Like.exists?(user_id: current_user.id, recruitment_id: recruitment.id) %>
      <p><%=link_to "気になる", recruitment_likes_path(recruitment.id), method: :post, remote: true, class: "btn btn-success" %></p>
    <% else %>
      <p><%=link_to "気になる解除", recruitment_likes_path(recruitment.id), method: :delete, remote: true, class: "btn btn-danger" %></p>
    <% end %>
<% end %>
