<% if user_signed_in? %>
    <% if !Like.exists?(user_id: current_user.id, recruitment_id: recruitment.id) %>
      <%= link_to recruitment_likes_path(recruitment.id), method: :post, remote: true, class: "like-btn" do %>
        <i class="far fa-star"></i>
      <% end %>
    <% else %>
      <%= link_to recruitment_likes_path(recruitment.id), method: :delete, remote: true, class: "like-btn" do %>
        <i class="fas fa-star"></i>
      <% end %>
    <% end %>
<% end %>
